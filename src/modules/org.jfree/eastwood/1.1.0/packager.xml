<packager-module>

    <property name="name" value="${ivy.packager.module}"/>
    <property name="revision" value="${ivy.packager.revision}"/>
    <property name="archive" value="${name}-${revision}"/>

    <resource url="http://downloads.sourceforge.net/project/${name}/${name}/${revision}/${archive}.zip"
        sha1="2a2d841237877d9e08d349d5ecd5bc0a4a2d38ca"/>

    <build>
        <!-- jar -->
        <mkdir dir="foo"/>
        <unzip src="archive/${archive}/${archive}.war" dest="foo"/>
        <move file="foo/WEB-INF/lib/${archive}.jar" tofile="artifacts/jars/${name}.jar"/>

        <!-- source -->
        <zip destfile="artifacts/sources/${name}.zip">
            <fileset dir="archive/${archive}/source"/>
        </zip>

    </build>
</packager-module>
