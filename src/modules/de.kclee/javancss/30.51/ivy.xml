<ivy-module>

    <info publication="20090207120000">
        <license name="Lesser GNU Public License, Version 3.0" url="http://www.gnu.org/licenses/lgpl.html"/>
        <description homepage="http://www.kclee.de/clemens/java/javancss/">
        JavaNCSS is a simple command line utility which measures two standard
        source code metrics for the Java programming language. The metrics
        are collected globally, for each class and/or for each function. 
        </description>
    </info>

    <publications>
        <artifact/>
        <artifact name="ccl"/>
        <artifact name="javancssanttask"/>
        <artifact name="jhbasic"/>
        <artifact name="javancss2html" type="report" ext="xsl"/>
        <artifact name="source" type="source" ext="zip"/>
        <!-- No prebuilt javadoc currently available. -->
    </publications>

    <dependencies>
        <dependency org="org.javacc" name="javacc" rev="4.+" conf="default->default"/>
    </dependencies>

</ivy-module>
