<ivy-module>

    <info publication="20120109120000">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://code.google.com/p/guava-libraries/">
        The Guava project contains several of Google's core libraries
        that we rely on in our Java-based projects: collections, caching,
        primitives support, concurrency libraries, common annotations,
        string processing, I/O, and so forth.
        </description>
    </info>

    <configurations>
        <conf name="default" description="Guava Java classes"/>
        <conf name="gwt" description="Guava GWT version"/>
    </configurations>

    <publications>
        <artifact name="guava" conf="default"/>
        <artifact name="guava" conf="default" type="source" ext="zip"/>
        <artifact name="guava" conf="default" type="javadoc" ext="zip"/>
        <artifact name="guava-gwt" conf="gwt"/>
        <artifact name="guava-gwt" conf="gwt" type="source" ext="zip"/>
        <artifact name="guava-gwt" conf="gwt" type="javadoc" ext="zip"/>
    </publications>

</ivy-module>
