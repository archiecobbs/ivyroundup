<packager-module>

    <property name="name" value="${ivy.packager.module}"/>
    <property name="revision" value="${ivy.packager.revision}"/>
    <property name="bin" value="${name}-bin-${revision}"/>
    <property name="src" value="${name}-src-${revision}"/>

    <property name="mirror1" value="http://www.apache.org/dist"/>
    <property name="backup" value="http://archive.apache.org/dist"/>

    <resource url="${mirror1}/xmlgraphics/batik/binaries/${bin}.zip"
      sha1="fc95f083c7c2129ec969a55cf3a659c8b469a610">
        <url href="${backup}/xmlgraphics/batik/${bin}.zip"/>
        <include name="${name}-${revision}/*.jar"/>
        <include name="${name}-${revision}/lib/*.jar"/>
    </resource>
    <resource url="${mirror1}/xmlgraphics/batik/source/${src}.zip"
      sha1="2a91b64758fb6969f5aeee9b0cdfdf48a9af3faf">
        <url href="${backup}/xmlgraphics/batik/${src}.zip"/>
        <include name="${name}-${revision}/sources/**/*"/>
        <include name="${name}-${revision}/sources-1.4/**/*"/>
        <include name="${name}-${revision}/resources/**/*"/>
    </resource>

    <build>
        <!-- jars -->
        <move todir="artifacts/jars">
            <fileset dir="archive/${name}-${revision}">
                <include name="batik-*.jar"/>
            </fileset>
            <fileset dir="archive/${name}-${revision}/lib">
                <include name="batik-*.jar"/>
            </fileset>
        </move>

        <!-- source -->
        <zip destfile="artifacts/sources/source.zip">
            <fileset dir="archive/${name}-${revision}/sources"/>
            <fileset dir="archive/${name}-${revision}/sources-1.4"/>
            <fileset dir="archive/${name}-${revision}/resources"/>
        </zip>
    </build>
</packager-module>
