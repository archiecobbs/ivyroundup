<packager-module>

    <property name="name" value="${ivy.packager.module}"/>
    <property name="revision" value="${ivy.packager.revision}"/>
    <property name="archive" value="${name}-${revision}"/>
    <resource url="https://downloads.sourceforge.net/project/${name}/${name}/${revision}/${archive}-bin.tar.bz2"
      sha1="ebc0c1f6b9722cbdae0187686860c94313d6e30a"/>
    <resource url="https://downloads.sourceforge.net/project/${name}/${name}/${revision}/${archive}-src.tar.bz2"
      sha1="23694f563392959d8b152ef86e67747674491761"/>

    <build>
        <!-- jar -->
        <move file="archive/${name}/${archive}.jar" tofile="artifacts/jars/${name}.jar"/>

        <!-- source -->
        <zip destfile="artifacts/sources/source.zip">
            <fileset dir="archive/${name}/src/java"/>
        </zip>

        <!-- javadoc -->
        <zip destfile="artifacts/javadocs/javadoc.zip">
            <fileset dir="archive/${name}/docs/api"/>
        </zip>
    </build>
</packager-module>
