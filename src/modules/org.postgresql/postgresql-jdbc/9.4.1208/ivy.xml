<ivy-module>

    <info publication="20160219000000">
        <license name="BSD License" url="https://jdbc.postgresql.org/about/license.html"/>
        <description homepage="https://jdbc.postgresql.org/">
            <p>The PostgreSQL JDBC driver allows Java programs to connect to a
            PostgreSQL database using standard, database independent Java code.</p>

            <p>It is a pure Java (Type IV) implementation, so all you need is one jar file.</p>
        </description>
    </info>

    <configurations>
        <conf name="jdbc4" description="JDBC 4 (JDK 1.6)"/>
        <conf name="jdbc41" description="JDBC 4.1 (JDK 1.7)"/>
        <conf name="jdbc42" description="JDBC 4.2 (JDK 1.8)"/>
        <conf name="default" extends="jdbc42" description="Default configuration (same as jdbc42)"/>
    </configurations>

    <publications>
        <!-- jar -->
        <artifact name="postgresql-jdbc4" conf="jdbc4"/>
        <artifact name="postgresql-jdbc41" conf="jdbc41"/>
        <artifact name="postgresql-jdbc42" conf="jdbc42"/>

        <!-- javadoc -->
        <artifact name="postgresql-jdbc4" type="javadoc" conf="jdbc4" ext="zip"/>
        <artifact name="postgresql-jdbc41" type="javadoc" conf="jdbc41" ext="zip"/>
        <artifact name="postgresql-jdbc42" type="javadoc" conf="jdbc42" ext="zip"/>

        <!-- source -->
        <artifact name="postgresql-jdbc4" type="source" conf="jdbc4" ext="zip"/>
        <artifact name="postgresql-jdbc41" type="source" conf="jdbc41" ext="zip"/>
        <artifact name="postgresql-jdbc42" type="source" conf="jdbc42" ext="zip"/>
    </publications>
</ivy-module>
