<!-- $Id$ -->
<project name="ivyroundup" default="repo">

    <target name="validate" description="Validate all ivy.xml and builder.xml files">
        <xmlvalidate failonerror="true" warn="yes" lenient="no">
            <attribute name="http://xml.org/sax/features/namespaces" value="true"/>
            <attribute name="http://apache.org/xml/features/validation/schema" value="true"/>
            <attribute name="http://apache.org/xml/features/validation/schema-full-checking" value="true"/>
            <fileset dir="src">
                <include name="modules/**/ivy.xml"/>
                <include name="modules/**/builder.xml"/>
            </fileset>
        </xmlvalidate>
    </target>

    <target name="repo" depends="validate" description="Regenerate the repository">

        <!-- Copy all ivy.xml and builder.xml files into repository -->
        <delete>
            <fileset dir="repo">
                <include name="modules.xml"/>
                <include name="modules/**/ivy.xml"/>
                <include name="modules/**/builder.xml"/>
                <include name="images/**/*"/>
                <include name="xsl/**/*"/>
                <include name="css/**/*"/>
                <include name="xsd/**/*"/>
            </fileset>
        </delete>
        <copy todir="repo">
            <fileset dir="src">
                <include name="modules/**/ivy.xml"/>
                <include name="modules/**/builder.xml"/>
                <include name="images/**/*"/>
                <include name="xsl/**/*"/>
                <include name="css/**/*"/>
                <include name="xsd/**/*"/>
            </fileset>
        </copy>

        <!-- Generate list of modules -->
        <exec executable="/bin/bash" logError="true" failonerror="true">
            <arg value="-c"/>
            <arg value="find src/modules -name ivy.xml -print | awk -F/ -f src/awk/xmlify.awk > repo/modules.xml"/>
        </exec>
    </target>

</project>
