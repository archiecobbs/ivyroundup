      <dependency org="org.apache.commons" name="commons-collections" rev="3.2.1" conf="default->default"/>
      <dependency org="org.apache.commons" name="commons-httpclient" rev="3.1" conf="default->default"/>
      <dependency org="org.apache.commons" name="commons-io" rev="1.4" conf="default->default"/>
      <dependency org="org.apache.commons" name="commons-lang" rev="2.4" conf="default->default"/>
      <dependency org="org.apache.commons" name="commons-logging" rev="1.1.1" conf="default->default"/>
      <dependency org="net.sourceforge.cssparser" name="cssparser" rev="0.9.5" conf="default->default"/>
      <dependency org="org.cyberneko" name="nekohtml" rev="1.9.14" conf="default->default"/>
      <dependency org="org.w3c.css" name="sac" rev="1.3" conf="default->default"/>
