<ivy-module rev="$Id$">

    <info publication="20060610120000">
        <license name="GNU Lesser General Public License, Version 2.1" url="http://www.gnu.org/licenses/lgpl-2.1.html"/>
        <description homepage="http://htmlparser.sourceforge.net/">
            <p>
            HTML Parser is a Java library used to parse HTML in either a
            linear or nested fashion. Primarily used for transformation
            or extraction, it features filters, visitors, custom tags
            and easy to use JavaBeans. It is a fast, robust and well
            tested package.
            </p>
        </description>
    </info>

    <configurations>
        <conf name="default" description="Everything"/>
        <conf name="filterbuilder" description="Only FilterBuilder"/>
        <conf name="htmllexer" description="Only HTML lexer"/>
        <conf name="htmlparser" description="Only HTML parser"/>
        <conf name="thumbelina" description="Only Thumbelina"/>
    </configurations>

    <publications>
        <artifact name="filterbuilder" conf="default,filterbuilder"/>
        <artifact name="htmllexer" conf="default,htmllexer"/>
        <artifact name="htmlparser" conf="default,htmlparser"/>
        <artifact name="thumbelina" conf="default,thumbelina"/>
        <artifact name="source" type="source" ext="zip"/>
        <artifact name="javadoc" type="javadoc" ext="zip"/>
    </publications>

</ivy-module>
