<ivy-module rev="$Id$">

    <info publication="20091009120000">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://juel.sourceforge.net/">
            <p>Java Unified Expression Language <em>JUEL</em></p>

            <p><em>JUEL</em> is an implementation of the Unified Expression Language (EL),
            specified as part of the JSP 2.1 standard
            (<a href="http://jcp.org/aboutJava/communityprocess/final/jsr245/">JSR-245</a>).
            </p>
        </description>
    </info>

    <configurations>
        <conf name="api"                   description="Java Unified Expression Language API"/>
        <conf name="impl"    extends="api" description="Java Unified Expression Language Implementation"/>
        <conf name="all"                   description="JUEL API and Implementation"/>
        <conf name="default" extends="all" description="JUEL default conf (one jar)"/>
    </configurations>

    <publications>
        <artifact name="juel-api" conf="api"/>
        <artifact name="juel-impl" conf="impl"/>
        <artifact name="juel" conf="all"/>
        <artifact name="source" type="source" ext="zip"/>
        <artifact name="javadoc" type="javadoc" ext="zip"/>
    </publications>

</ivy-module>
