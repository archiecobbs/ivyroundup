<ivy-module rev="$Id$">

    <info publication="20090519120000">
        <license name="MIT License" url="http://www.opensource.org/licenses/mit-license.php"/>
        <description homepage="http://charts4j.googlecode.com/">
        charts4j is a free, lightweight charts and graphs Java API. It enables developers to programmatically
        create the charts available in the <a href="http://code.google.com/apis/chart/">Google Chart API</a>
        through a straightforward and intuitive Java API. 
        </description>
    </info>

    <configurations>
        <conf name="default" description="Normal Java version"/>
        <conf name="gwt" description="GWT version"/>
    </configurations>

    <publications>

        <!-- Normal Java version -->
        <artifact/>
        <artifact name="source" type="source" ext="zip"/>
        <artifact name="javadoc" type="javadoc" ext="zip"/>

        <!-- GWT version -->
        <artifact name="charts4j-gwt" conf="gwt"/>
        <artifact name="source-gwt" type="source" ext="zip" conf="gwt"/>
        <artifact name="javadoc-gwt" type="javadoc" ext="zip" conf="gwt"/>
    </publications>

</ivy-module>
