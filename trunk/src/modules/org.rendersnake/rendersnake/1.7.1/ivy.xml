<ivy-module rev="$Id$">

    <info publication="20121016120000">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://code.google.com/p/rendersnake/">

            <p>
            RenderSnake is a Java library for creating components and pages that produce HTML using only Java. Its purpose is to support the creation of Web applications that are better maintainable, allows for easier reuse, have testable UI components and produces compact HTML in an efficient way.
            </p>

        </description>
    </info>

    <configurations>
        <conf name="default" description="Core classes"/>
    </configurations>

    <publications>
        <artifact />
        <artifact name="source" type="source" ext="zip"/>
        <artifact name="javadoc" type="javadoc" ext="zip"/>
    </publications>

    <dependencies>
        <dependency org="org.apache.commons" name="commons-lang3" rev="[3.1,)" conf="default->default"/>
        <dependency org="org.apache.commons" name="commons-io" rev="2.0.1" conf="default->default"/>
    </dependencies>

</ivy-module>
