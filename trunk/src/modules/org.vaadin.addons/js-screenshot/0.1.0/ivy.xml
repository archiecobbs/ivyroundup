<ivy-module rev="$Id$">

    <info publication="20111025175600">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://vaadin.com/directory#addon/js-screenshot">
            <p>
                This is a simple widget to take client-side screenshots using html2canvas.js (http://html2canvas.hertzen.com/).
            </p>

            <p>
                Be aware that due to the same origin policy external/svg images are not supported.
            </p>

            <p>
                Features:<br/>
                <ol>
                    <li>take client-side screenshots (w/o the need for an applet)</li>
                    <li>transfers screenshot to server application</li>
                    <li>select root widget for the screenshot creation</li>
                </ol>
            </p>

            <p>
                Requirements:<br/>
                <ol>
                    <li>jQuery 1.6+ (required to be included before widgetset)</li>
                </ol>
            </p>
        </description>
    </info>

    <publications>
        <artifact/>
    </publications>

</ivy-module>
