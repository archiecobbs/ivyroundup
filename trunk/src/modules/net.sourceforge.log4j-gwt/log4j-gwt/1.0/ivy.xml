<ivy-module rev="$Id$">

    <info publication="20120804000000">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://log4j-gwt.sourceforge.net">

            <p>
            log4j-gwt is an adaptor that enables GWT client applications to use the log4j api.
            Log messages are forwarded to the normal GWT logging facility.
            </p>

        </description>
    </info>

   
    <publications>
        <artifact />
    </publications>

    <dependencies>
        <dependency org="org.apache.log4j" name="log4j" rev="1.2+" conf="default->default"/>
        <dependency org="com.google" name="gwt" rev="[2.1.0,3)" conf="default->compile"/>
    </dependencies>
</ivy-module>
