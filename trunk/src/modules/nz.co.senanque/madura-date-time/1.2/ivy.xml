<ivy-module rev="$Id$">

    <info publication="20111126085709">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://code.google.com/p/madura-date-time/">
        Allows configuration of holiday dates and a simple API to figure out if a date is a holiday.
        </description>
    </info>
    <publications>
        <artifact conf="default"/>
        <artifact name="javadoc" type="javadoc" ext="zip" conf="default"/>
        <artifact name="source" type="source" ext="zip" conf="default"/>
        <artifact name="MaduraDateTime" type="doc" ext="pdf" conf="default"/>
    </publications>
    <dependencies>
        <dependency org="org.jdom" name="jdom" rev="1.1"/>
        <dependency org="org.springframework" name="spring" rev="3.0.6" conf="default->context">
            <exclude org="javax.jms" ext="jms"/>
            <exclude org="org.apache.commons" module="commons-logging" ext="*"/>
        </dependency>
        <dependency org="org.apache.commons" name="commons-beanutils" rev="1.8.0" conf="default->default"/>
        <dependency org="org.slf4j" name="slf4j" rev="1.6.1" conf="default->jcl-migration"/>
        <dependency org="org.slf4j" name="slf4j" rev="1.6.1" conf="default->core"/>
        <exclude org="commons-logging" ext="*"/> <!-- ensures any logging can be used (log4j, logback etc) -->
        <exclude org="avalon-framework" ext="jar"/>
        <exclude org="logkit" ext="jar"/>
        <exclude org="javax.servlet" ext="jar"/>
    </dependencies>

</ivy-module>
