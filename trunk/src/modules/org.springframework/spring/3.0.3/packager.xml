<packager-module rev="$Id$">

    <property name="name" value="${ivy.packager.module}-framework"/>
    <property name="revision" value="${ivy.packager.revision}"/>
    <property name="distrev" value="${revision}.RELEASE"/>
    <property name="archive" value="${name}-${distrev}"/>

    <resource url="http://dist.springframework.org/release/SPR/${archive}-with-docs.zip"
      sha1="1253543696c9cb4ad322eaf78a245dedc1cf55b1">
        <include name="${archive}/dist/*.jar"/>
        <include name="${archive}/src/*.jar"/>
        <include name="${archive}/docs/javadoc-api/**/*"/>
    </resource>

    <build>

        <!-- jars -->
        <move todir="artifacts/jars">
            <fileset dir="archive/${archive}/dist">
                <include name="*.jar"/>
            </fileset>
            <mapper type="glob" from="org.springframework.*-${distrev}.jar" to="*.jar"/>
        </move>

        <!-- source -->
        <move todir="artifacts/sources">
            <fileset dir="archive/${archive}/src">
                <include name="*.jar"/>
            </fileset>
            <mapper type="glob" from="org.springframework.*-sources-${distrev}.jar" to="*.zip"/>
        </move>

        <!-- javadoc -->
        <zip destfile="artifacts/javadocs/javadoc.zip">
            <fileset dir="archive/${archive}/docs/javadoc-api"/>
        </zip>
    </build>
</packager-module>
