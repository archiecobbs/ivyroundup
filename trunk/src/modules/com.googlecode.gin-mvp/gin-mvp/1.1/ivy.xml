<ivy-module rev="$Id$">

    <info publication="20120616120000">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://code.google.com/p/gin-mvp/">

            <p>
                Provides a simple module to add the native MVP framework support to a GWT/GIN project, 
                similar to how other guice/gin extensions modules (such as guice-persist) work.
            </p>

        </description>
    </info>

    <publications>
        <artifact />
        <artifact name="source" type="source" ext="zip"/>
        <artifact name="javadoc" type="javadoc" ext="zip"/>
    </publications>

    <dependencies>
        <dependency org="com.google" name="gin" rev="1.5-gwt-2.2" conf="default->default"/>
    </dependencies>

</ivy-module>
