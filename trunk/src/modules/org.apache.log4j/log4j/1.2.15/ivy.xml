<ivy-module rev="$Id$">

    <info publication="20070824000000">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://projects.apache.org/projects/log4j.html">
            Apache log4j provides logging services for Java.
        </description>
    </info>

    <configurations>
        <conf name="default" visibility="public" description="runtime dependencies and master artifact can be used with this conf" extends="runtime,master"/>
        <conf name="master" visibility="public" description="contains only the artifact published by this module itself, with no transitive dependencies"/>
        <conf name="compile" visibility="public" description="this is the default scope, used if none is specified. Compile dependencies are available in all classpaths."/>
        <conf name="runtime" visibility="public" description="this scope indicates that the dependency is not required for compilation, but is for execution. It is in the runtime and test classpaths, but not the compile classpath." extends="compile"/>
        <conf name="test" visibility="private" description="this scope indicates that the dependency is not required for normal use of the application, and is only available for the test compilation and execution phases."/>

        <conf name="jmx" visibility="public" extends="default" />
        <conf name="jms" visibility="public" extends="default" />
        <conf name="mail" visibility="public" extends="default" />
    </configurations>

    <publications>
        <artifact name="log4j" type="jar" ext="jar" conf="master" />
        <artifact name="source" type="source" ext="zip" />
    </publications>

    <dependencies>
        <dependency org="javax.mail" name="mail" rev="1.4" force="true" conf="mail->default(*)" />
        <dependency org="javax.jms" name="jms" rev="1.1" force="true" conf="jms->default(*)" />
        <dependency org="com.sun.jdmk" name="jmxtools" rev="1.2.1" force="true" conf="jmx->default(*)" />
        <dependency org="com.sun.jmx" name="jmxri" rev="1.2.1" force="true" conf="jmx->default(*)" />
        <dependency org="oro" name="oro" rev="2.0.8" force="true" conf="test->compile(*),runtime(*),master(*)" />
        <dependency org="junit" name="junit" rev="3.8.1" force="true" conf="test->compile(*),runtime(*),master(*)" />
    </dependencies>

</ivy-module>
