<ivy-module rev="$Id$">

    <info publication="20080404170000">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://activemq.apache.org/"><![CDATA[
        A high performance IO abstraction framework
        ]]></description>
    </info>

    <configurations>
        <conf name="core" description="Core ActiveIO and dependencies"/>
        <conf name="core_java12" extends="core" description="Core ActiveIO and dependencies for JDK &lt; 1.4"/>
        <conf name="core_java14" extends="core" description="Core ActiveIO and dependencies for JDK 1.4"/>
        <conf name="core_java5" extends="core" description="Core ActiveIO and dependencies for JDK 5"/>
        <conf name="core_java6" extends="core" description="Core ActiveIO and dependencies for JDK 6"/>
        <conf name="default" extends="core_java5" description="Core ActiveIO and dependencies for JDK 5"/>
        <conf name="howl" extends="core" description="HOWL Logger"/>
        <conf name="xnet" extends="core" description="Dependecies for xnet GBean code"/>
    </configurations>

    <publications>
        <artifact/>
        <artifact name="source" type="source" ext="zip"/>
        <artifact name="javadoc" type="javadoc" ext="zip"/>
    </publications>

    <dependencies>
        <dependency org="org.apache.commons" name="commons-logging" rev="1.1.+" conf="core->default"/>
        <dependency org="net.sourceforge.backport-jsr166" name="backport-util-concurrent" rev="[0,)"
          conf="core_java12->Java12;core_java14->Java14;core_java5->Java50;core_java6->Java60"/>
        <dependency org="org.objectweb.howl" name="howl" rev="1.0.2" conf="howl->default"/>
        <!-- TODO: add geronimo to repo
        <dependency org="org.apache.geronimo" name="geronimo-kernel" rev="1.0" conf="xnet->default"/>
        <dependency org="org.apache.geronimo" name="geronimo-j2ee" rev="1.0" conf="xnet->default"/>
        -->
    </dependencies>

</ivy-module>
