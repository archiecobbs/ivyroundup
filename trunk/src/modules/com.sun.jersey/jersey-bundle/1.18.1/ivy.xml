        <artifact name="jersey-bundle-source" type="source" ext="zip"/>
        <artifact name="jersey-bundle-javadoc" type="javadoc" ext="zip"/>
    </publications>

    <dependencies>
        <dependency org="javax.ws.rs" name="jsr311-api" rev="1.1.1" conf="default->default"/>
    </dependencies>

</ivy-module>
