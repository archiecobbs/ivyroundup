<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- $Id$ -->
<ivysettings>
    <resolvers>

        <!--
            Define a builder repository using the repository we build in the repo/ subdirectory.
        -->
        <builder name="ivyroundup"
          buildRoot="${java.io.tmpdir}/ivybuilder"
          resourceCache="${user.home}/.ivy2/builder-cache"
          preserveBuildDirectories="true">
            <ivy pattern="file://${basedir}/../../repo/modules/[organisation]/[module]/[revision]/ivy.xml"/>
            <artifact pattern="file://${basedir}/../../repo/modules/[organisation]/[module]/[revision]/builder.xml"/>
        </builder>
    </resolvers>
    <modules>
        <module organisation=".*" name=".*" resolver="ivyroundup"/>
    </modules>

    <!-- Cache artifacts in build/cache to bypass user cache in ~/.ivy2/cache -->
    <caches defaultCacheDir="${basedir}/../cache" useOrigin="true"/>
</ivysettings>

